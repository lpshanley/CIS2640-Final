<?xml version='1.0' encoding='utf-8'?>
<widget id="com.phonegap.helloworld" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">

  <preference name="phonegap-version" value="cli-8.0.0" />

	<name>Final App</name>

    <description>
        Simple book review application
    </description>

	<author email="lpshanley@outlook.com">
        PhoneGap Team
    </author>

	<content src="index.html" />

	<access origin="*" />

	<platform name="android">
        <icon src="res/android/book_36x36.png" density="ldpi" />
        <icon src="res/android/book_48x48.png" density="mdpi" />
        <icon src="res/android/book_72x72.png" density="hdpi" />
        <icon src="res/android/book_96x96.png" density="xhdpi" />
        <icon src="res/android/book_144x144.png" density="xxhdpi" />
        <icon src="res/android/book_192x192.png" density="xxxhdpi" />

		<!-- Allows for connection to external data -->
		<plugin name="cordova-plugin-whitelist" spec="1.3.3" />

		<!-- Camera plugin 2.4.1 ? 4.0.2 -->
		<plugin name="cordova-plugin-camera" spec="2.4.1" />

		<!-- File transfer plugin -->
		<plugin name="cordova-plugin-file-transfer" spec="1.7.1" />

		<!-- Geolocation Plugin -->
		<plugin name="cordova-plugin-geolocation" spec="4.0.1" />

		<plugin name="cordova-plugin-vibration" spec="~3.1.0" />

	</platform>

</widget>
